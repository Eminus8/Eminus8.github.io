        .fancy-button .panel {
            display: none;
            position: absolute;
            top: 0;
            left: 100%;
            width: 150px; /* Panel width */
            background-color: #005f7f;
            color: white;
            padding: 10px;
            border-radius: 4px;
            height: 100%; /* Match button height */
            transition: transform 0.3s ease;
            transform: translateX(-100%);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            z-index: 1;
        }

        .fancy-button:hover .panel {
            display: block;
            transform: translateX(0);
        }
    </style>
